<?xml version="1.0" encoding="utf-8"?>
<package xmlns="http://schemas.microsoft.com/packaging/2012/06/nuspec.xsd">
  <metadata>
    <id>NuGetUtils.MSBuild.Exec</id>
    <version>1.0.0</version>
    <title>Task Factory for Executing NuGet-Package -Based MSBuild Tasks</title>
    <authors>Stanislav Muhametsin</authors>
    <owners>Stanislav Muhametsin</owners>
    <requireLicenseAcceptance>false</requireLicenseAcceptance>
    <license type="expression">Apache-2.0</license>
    <repository url="https://github.com/stazz/NuGetUtils/tree/develop/Source/NuGetUtils.MSBuild.Exec" type="git" />
    <projectUrl>https://github.com/stazz/NuGetUtils</projectUrl>
    <description>Provides easy way to execute NuGet-based MSBuild tasks.</description>
    <releaseNotes>The dedicated AppDomain is no longer used if the value for option "NoDedicatedAppDomain" is true. This value is only used in .NET Desktop version, and defaults to true when Mono framework is detected. Otherwise it is false.</releaseNotes>
    <copyright>Stanislav Muhametsin</copyright>
    <tags>utility nuget extensions msbuild task package resolve</tags>
    <developmentDependency>true</developmentDependency>
    <dependencies/>
  </metadata>
  <files>
    <file src="net46\*.dll" exclude="net46\Microsoft.Build.Framework.dll" target="build\net46" />
    <file src="netcoreapp1.1\NuGetUtils.MSBuild.Exec.dll" target="build\netcoreapp1.1\" />
    <file src="NuGetSpecific\**\*.dll" target="build\netcoreapp1.1\" />
    <file src="build\*.*" target="build\" />
    <file src="buildMultiTargeting\*.*" target="buildMultiTargeting\" />
  </files>
</package>